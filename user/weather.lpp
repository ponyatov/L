%{
#include "weather.hpp"
#define TC(X)	{ yylval.c = yytext[0]; 			return X; }
#define TS(X)	{ yylval.s = new string(yytext);	return X; }
%}
%option noyywrap
%option yylineno

%%
\"name\"					TS(NAME)
\"dt_txt\"					TS(DT)
\"temp\"					TS(TEMP)
\"humidity\"				TS(HUM)
:							TC(COLON)
[0-9]+						TS(S)
[0-9]+\.[0-9]+				TS(S)
\"[^\"]*\"					TS(S)
\n							{}
.							{}
%%
